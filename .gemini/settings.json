{
    "hooks": {
        "BeforeTool": [
            {
                "matcher": "Shell",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python3 .gemini/hooks/dangerous_command_blocker.py"
                    }
                ]
            },
            {
                "matcher": "run_command",
                "hooks": [
                    {
                        "type": "command",
                        "command": "python3 .gemini/hooks/dangerous_command_blocker.py"
                    }
                ]
            }
        ]
    }
}